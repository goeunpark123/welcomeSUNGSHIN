<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5D658E"
    tools:context=".campus.Sungshin03Ele">

    <LinearLayout
        android:layout_width="530dp"
        android:layout_height="750dp"
        android:background="@drawable/sung03ele"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@id/e"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:background="@drawable/explain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[성신관 3층]"
        android:textColor="#4700C4"
        android:textSize="28dp"
        android:typeface="monospace"
        android:id="@+id/place"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.8"/>

    <TextView
        android:text="난향관 7층 구름정원과 연결되어 있다."
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:textColor="#000000"
        android:textSize="18dp"
        android:typeface="monospace"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/place"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageButton
        android:id="@+id/school_map"
        android:onClick="clickedToSchoolMap"
        android:src="@drawable/home"
        android:layout_width="64dp"
        android:layout_height="45dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="15dp"/>

    <ImageButton
        android:id="@+id/up1"
        android:onClick="clickedToSungshin04Ele"
        android:src="@drawable/up"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.03"/>

    <ImageButton
        android:id="@+id/left1"
        android:onClick="clickedToCloudBridgeFront"
        android:src="@drawable/left"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/e"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.03"/>

    <ImageButton
        android:id="@+id/down1"
        android:onClick="clickedToSungshin02Ele"
        android:src="@drawable/down"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/e"/>

</android.support.constraint.ConstraintLayout>