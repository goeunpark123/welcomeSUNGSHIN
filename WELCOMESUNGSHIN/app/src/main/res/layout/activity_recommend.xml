<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/recoback"
    android:padding="30dp"
    tools:context=".Recommend">

    <ImageButton
        android:id="@+id/reco"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@android:color/transparent"
        android:onClick="clickedToFood"
        android:scaleType="fitCenter"
        android:src="@drawable/goback"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="210dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@id/eat"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/eat"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:text="name"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/menu"/>

    <TextView
        android:id="@+id/menu"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:text="menu"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintRight_toLeftOf="@id/reco"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:background="@drawable/foodcat"
        app:layout_constraintBottom_toTopOf="@id/eat"
        app:layout_constraintRight_toRightOf="@id/eat"/>

</android.support.constraint.ConstraintLayout>